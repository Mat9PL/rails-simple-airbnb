<%= link_to 'MiniAirbnb', flats_path %>
<%= link_to 'Add new flat', new_flat_path %>
<div class="container">
  <ul class="flat-list">
    <% @flats.each do |flat| %>
      <li class="card">
      <img src="https://source.unsplash.com/random" alt="photo">
        <h3><%= link_to flat.name, flat_path(flat.id) %></h3>
        <h3><%= flat.price_per_night %>â‚¬/night</h3>
        <div class="secondary-info">
          <h4><%= flat.number_of_guests %> p</h4>
          <h4><%= flat.address[0, 10] %>...</h4>
        </div>
        <p>
          <%= "#{flat.description[0,100]}..."%>
          <%= link_to 'see more', flat_path(flat.id) %>
        </p>
      </li>
    <% end %>
  </ul>
</div>